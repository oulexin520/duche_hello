.weui-cells{
  margin:20rpx;
}
.weui-cells .weui-cell{
  display: flex;
}
.choice{
  border-bottom:1rpx solid #ccc;
  border-top:1rpx solid #ccc;
  width: 100%;
  height: 60rpx;
}
.choice .text1{
  color: #000;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 20rpx;
  margin-right: 50rpx;
}
.choice .text2{
  color: #ccc;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.choice image{
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-right: 10rpx;
}
#text{
  border: 1rpx solid #ccc;
  width: 90%;
  height: 100rpx;
  margin:30rpx ;
  font-size: 30rpx;
  margin-left: 20rpx;
  color:#ccc;
}

.tex{
  font-size: 40rpx;
  margin-left:30rpx ;
  line-height: 40rpx;
}
#txt{
  border: 1rpx solid #ccc;
  width: 90%;
  height: 200rpx;
  margin: 30rpx ;
  font-size: 30rpx;
}
.tu{
  width: 90%;
  height: 130rpx;
  margin-left: 30rpx;
  position: relative;
}
.tu .sb{
  position: absolute;
  bottom: 0;
  left:320rpx;
  text-align: center;
  font-size: 20rpx;
  color: #ccc;
}
.tu .sc{
font-size: 30rpx;
line-height: 30rpx;

}
.tu .img{
  width: 100rpx;
  height: 100rpx;
  line-height: 200rpx;
  margin-left: 190rpx;
}
.tu .num{
  font-size: 30rpx;
  color: #ccc;
  position: absolute;
  top: 0;
  right: 10rpx;
}

.zx{
  width: 90%;
  height: 200rpx;
  border: 1rpx solid #ccc;
  margin-top: 30rpx;
  margin-left: 30rpx;
  padding: 30rpx;
  box-sizing: border-box;
}
.zx .img1{
  border: 1rpx dashed #ccc;
  width: 100rpx;
  height: 100rpx;
  padding: 20rpx;

}
.check{
  width: 90%;
  margin-left: 30rpx;
  margin-top: 30rpx;
}
.tj{
  width: 100%;
  height: 100rpx;
  margin-top: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tj button{
  background: rgb(19, 226, 105);
  width:300rpx;
  color: #fff;
} 

