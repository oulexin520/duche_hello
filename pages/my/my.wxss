.header{
  width: 100%;
  height: 200rpx;
  margin: 30rpx;
  line-height: 200rpx;
  font-size: 30rpx;
  color: #ccc;
border-bottom: 30rpx solid rgba(204, 204, 204, 0.25);

}
.header image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  vertical-align: middle;
  overflow: hidden;
  margin-right: 20rpx;
}
.main{
  width: 100%;
  height: auto;
  margin-left: 30rpx;
}

.main .tm{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    border-bottom: 1rpx solid #ccc;
    line-height: 100rpx;
    padding-right: 30rpx;
 }
.main .tm image{
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
    margin-right: 10rpx;

}
.main .tm button{
  background: #fff;
  outline:0 none !important; 
  border: 0;
  margin-left: 0;
}
.footer{
  width: 100%;
  margin-left: 30rpx;
  height: 200rpx;
  background: rgba(204, 204, 204, 0.25);
}
